package sweeper;

public class Game
{
    private Bomb bomb;

    public Game (int cols, int rows, int bombs) //констурктор
    {
        Ranges.setSize(new Cord(cols, rows));
        bomb = new Bomb(bombs);
    }

    public void start ()
    {
        bomb.start();
    }

    public Box getBox (Cord cord)
    {
        return bomb.get(cord);
    }
}
